<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Mitzin.com - Premium Domain For Sale</title>
<meta name="description" content="Mitzin.com - Premium, short, and highly brandable domain name. Perfect for AI, fintech, and Web3 businesses.">
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanilla-tilt@1.7.2/dist/vanilla-tilt.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2.12.1/tsparticles.bundle.min.js"></script>
<style>
body { margin:0; font-family:'Helvetica',sans-serif; overflow-x:hidden; transition: background 0.5s, color 0.5s;}
.gradient-text { background: linear-gradient(90deg,#00FFFF,#FF00FF); -webkit-background-clip:text; color:transparent;}
.glass-card { background: rgba(255,255,255,0.1); backdrop-filter: blur(15px); border-radius:1rem; box-shadow:0 8px 32px rgba(0,0,0,0.3); opacity:0; transform: translateY(60px) perspective(1400px);}
.glass-card.visible { opacity:1; transform: translateY(0) perspective(1400px);}
.glass-card:hover { transform: translateY(-20px) scale(1.08) rotateX(3deg) rotateY(3deg); background: rgba(255,255,255,0.3); box-shadow:0 25px 70px rgba(0,0,0,0.7);}
.cta-btn { transition: all 0.3s ease; border-radius:1rem; box-shadow:0 6px 25px rgba(0,0,0,0.3);}
.cta-btn:hover { transform: translateY(-7px) scale(1.07); box-shadow:0 16px 55px rgba(0,0,0,0.6);}
.dark-mode { background:#0a0a0a; color:#f0f0f0;}
.light-mode { background:#f0f0f0; color:#111;}
</style>
</head>
<body class="dark-mode">

<!-- Dark/Light Toggle -->
<button id="toggleMode" class="fixed top-5 right-5 z-50 bg-gray-700 text-white px-4 py-2 rounded-lg shadow-lg">Toggle Mode</button>

<!-- Interactive Particles Background -->
<div id="tsparticles" class="absolute inset-0 z-0"></div>

<!-- Hero Section -->
<section class="relative z-10 min-h-screen flex flex-col items-center justify-center text-center px-6">
  <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_tkautw2k.json"
                 background="transparent" speed="1" style="width:600px; height:600px;" loop autoplay
                 class="mb-10"></lottie-player>

  <h1 class="text-6xl sm:text-7xl font-extrabold mb-6 gradient-text">Mitzin.com</h1>
  <p class="text-xl sm:text-2xl mb-12 max-w-2xl">
    A <span class="font-semibold">premium .com domain</span> for the future.  
    Perfect for <strong>AI, Web3, fintech, blockchain, and global startups</strong>.
  </p>

  <div class="flex flex-col sm:flex-row gap-6 mb-16">
    <a href="https://your-contact-page.com" class="cta-btn bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-4 px-10">
      🚀 Make an Offer
    </a>
    <a href="https://sedo.com/search/details/?domain=mitzin.com" target="_blank" class="cta-btn bg-purple-600 hover:bg-purple-700 text-white font-semibold py-4 px-10">
      🔗 View on Sedo
    </a>
    <a href="https://www.afternic.com/domain/mitzin.com" target="_blank" class="cta-btn bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-10">
      🌍 View on Afternic
    </a>
  </div>

  <div class="grid sm:grid-cols-2 gap-8 max-w-5xl w-full">
    <div class="glass-card p-8" data-tilt data-tilt-max="30">
      <h3 class="text-xl font-bold mb-4">💡 Why Mitzin.com?</h3>
      <ul class="space-y-2">
        <li>✅ Short & highly brandable</li>
        <li>✅ Strong premium appeal</li>
        <li>✅ Perfect for AI & fintech</li>
        <li>✅ Recognizable & global-ready</li>
      </ul>
    </div>
    <div class="glass-card p-8" data-tilt data-tilt-max="30">
      <h3 class="text-xl font-bold mb-4">🛒 Marketplaces</h3>
      <ul class="space-y-2">
        <li><strong>Sedo:</strong> Europe’s biggest marketplace</li>
        <li><strong>Afternic:</strong> Global distribution (GoDaddy)</li>
        <li><strong>Atom:</strong> Startup-focused branding</li>
        <li><strong>Unstoppable:</strong> Web3-native buyers</li>
      </ul>
    </div>
  </div>

  <p class="text-sm mt-16 mb-8">© 2025 Mitzin.com – Premium Domain Name</p>
</section>

<script>
// Dark/Light Toggle
const toggleBtn = document.getElementById('toggleMode');
toggleBtn.addEventListener('click', ()=>{ document.body.classList.toggle('dark-mode'); document.body.classList.toggle('light-mode'); });

// Tilt 3D Depth
VanillaTilt.init(document.querySelectorAll("[data-tilt]"), { max:30, speed:600, glare:true, "max-glare":0.5, scale:1.08 });

// Particles Interactive
tsParticles.load("tsparticles", {
  fpsLimit:60,
  particles:{ number:{value:100}, color:{value:"#ffffff"}, shape:{type:"circle"}, opacity:{value:0.3},
    size:{value:{min:1,max:5}}, move:{enable:true,speed:1.8,direction:"none",outModes:{default:"bounce"}},
    links:{enable:true,distance:140,color:"#ffffff",opacity:0.2,width:1.5}
  },
  interactivity:{ events:{onHover:{enable:true,mode:"grab"}, onClick:{enable:true,mode:"push"}},
    modes:{grab:{distance:160}, push:{quantity:5}}
  },
  detectRetina:true
});

// Scroll-triggered animations for Cards
const cards = document.querySelectorAll('.glass-card');
const observer = new IntersectionObserver(entries=>{ entries.forEach(entry=>{ if(entry.isIntersecting){ entry.target.classList.add('visible'); } }); }, {threshold:0.2});
cards.forEach(card=>observer.observe(card));
</script>
</body>
</html>
